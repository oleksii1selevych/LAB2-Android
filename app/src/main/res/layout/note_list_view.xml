<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6">

    <ImageView
        android:id="@+id/noteIconImageView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_icon_importance_low" />

    <TextView
        android:id="@+id/noteTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="template title"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/noteImportanceValue"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:src="@drawable/ic_icon_importance_low" />

    <TextView
        android:id="@+id/noteCreationTimeTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:textColor="@color/black"
        android:text="21/01/2002 12:34"
        android:gravity="end"
        android:layout_marginRight="5dp"/>
</LinearLayout>